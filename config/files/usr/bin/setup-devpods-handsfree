#!/bin/bash
# Check if provider is already set up to avoid re-running
if ! devpod provider list | grep -q "podman"; then
    devpod provider add docker --name podman
    devpod provider set-options podman \
      -o DOCKER_HOST=unix://${XDG_RUNTIME_DIR}/podman/podman.sock \
      -o USE_SUDO=false
    devpod provider set-default podman
    echo "DevPod Podman provider configured automatically."
fi
